  <div id="box1" style="opacity:0.1"></div>
 </body>
 <script>
 var Divs = document.getElementById("box1");

Divs.onmouseover=function()
{
	move(Divs,1);
}
	Divs.onmouseout=function()
	{
		move(Divs,0.1);
	}
	 function move(obj,target;)
	 {
			 clearInterval(obj.t);
			obj.t = setInterval(function()
			{
				var current = parseFloat(obj.style.opacity);
					
				if(current==target)
				{
					clearInterval(obj.t)
					return ;
				}
			 
				var speed = (target>current)?0.1:-0.1
					 current +=speed
					console.log(current)
					obj.style.opcity=current

			},100)
	}
 
 
 
 </script>
